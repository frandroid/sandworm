<h1>Listing formats</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Width</th>
    <th>Length</th>
    <th>Height</th>
    <th>Weight</th>
    <th>Medium</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @formats.each do |format| %>
  <tr>
    <td><%= format.name %></td>
    <td><%= format.width %></td>
    <td><%= format.length %></td>
    <td><%= format.height %></td>
    <td><%= format.weight %></td>
    <td><%= format.medium_id %></td>
    <td><%= link_to 'Show', format %></td>
    <td><%= link_to 'Edit', edit_format_path(format) %></td>
    <td><%= link_to 'Destroy', format, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

