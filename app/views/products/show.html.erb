<section>
<h1><%= @product.name %></h1>
<p><strong>Category: </strong><%= @product.category.name %>
<p><strong>Description: </strong>
	<%= @product.description unless @product.description.nil? %>
</p>
<p><strong>Price: </strong><%= number_to_currency(@product.price) unless @product.price.nil? %></p>

</section>
<%if current_user.admin? %>
	<%= link_to 'Edit', edit_product_path(@product) %>
	 | <%= link_to "New", new_product_path %>
<% end %>