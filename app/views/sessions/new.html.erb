<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<div class="sign-in center">
	<%= form_tag(sessions_path) do %>
		<div class="field">
			<%= label_tag :email %><br />
			<%= text_field_tag :email %>
		</div>
			
		<div class="field">
			<%= label_tag :password %><br />
			<%= password_field_tag :password  %>
		</div>
		
		<div class="btn">	
			<%= submit_tag "Sign in" %>
		</div>
	<% end %>
   
   <p>New user? <%= link_to "Sign up now!", signup_path %></p>

</div>

