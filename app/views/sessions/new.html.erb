<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<div>
	<%= form_tag(sessions_path) do %>
		<div class="field">
			<%= label_tag :email %>
			<%= text_field_tag :email %>
		</div>
			
		<div class="field">
			<%= label_tag :password %>
			<%= password_field_tag :password  %>
		</div>
			
			<%= submit_tag "Sign in" %>
	<% end %>
   
   <p>New user? <%= link_to "Sign up now!", signup_path %></p>

</div>

